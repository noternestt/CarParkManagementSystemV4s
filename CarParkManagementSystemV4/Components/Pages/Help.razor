@page "/Help"
@rendermode InteractiveServer
@inject NavigationManager Navigation
<PageTitle>Help</PageTitle>

<div class="container mt-5">
    <h2 class="text-center mb-4">How to Use ParkEase Solutions</h2>
    <p class="text-center text-muted">Feeling lost on how to start using this page? Here's how you can get started with these simple steps:</p>
    <div class="row mt-4">
        <div class="col-md-6 col-lg-3 text-center">
            <div class="card shadow-sm p-3 mb-4">
                <div class="card-body">
                    <i class="fas fa-car fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Step 1</h5>
                    <p class="card-text">Add your vehicle details to get started.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 text-center">
            <div class="card shadow-sm p-3 mb-4">
                <div class="card-body">
                    <i class="fas fa-search-location fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Step 2</h5>
                    <p class="card-text">Search for available parking slots near you.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 text-center">
            <div class="card shadow-sm p-3 mb-4">
                <div class="card-body">
                    <i class="fas fa-calendar-check fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Step 3</h5>
                    <p class="card-text">Create a parking session and make payment.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 text-center">
            <div class="card shadow-sm p-3 mb-4">
                <div class="card-body">
                    <i class="fas fa-parking fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Step 4</h5>
                    <p class="card-text">Enjoy your parking session with ease!</p>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="/" class="btn btn-secondary">
        <i class="fas fa-home"></i> Back to Home
        </a>
    </div>
</div>